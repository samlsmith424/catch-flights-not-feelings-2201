<h1>All Flights</h1>

<% @flights.each do |flight| %>
<section id="flight-<%= flight.number %>">
  <p>Flight: <%= flight.number %>, Airline: <%= flight.airline.name %></p>
  <p>Passengers: <% flight.passengers.each do |passenger| %></p>
    <li><%= passenger.name %></li>
  <% end %>
</section>
<% end %>
